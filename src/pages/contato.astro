---
import SEO from '../components/SEO.astro';
import GoogleTag from '../components/GoogleTag.astro';
import Newsletter from '../components/Newsletter.astro';
import '../styles/global.css';

const links = [
  {
    title: "Portal Inox Link",
    url: "https://inoxlink.com.br",
    description: "Notícias e Wiki sobre Aço Inox",
    icon: "material-symbols:language"
  },
  {
    title: "Instagram",
    url: "https://instagram.com/inoxlink",
    description: "@inoxlink",
    icon: "mdi:instagram"
  },
  {
    title: "LinkedIn",
    url: "https://linkedin.com/company/inox-link",
    description: "Conecte-se conosco",
    icon: "mdi:linkedin"
  },
  {
    title: "WhatsApp",
    url: "https://wa.me/5500000000000",
    description: "Fale diretamente conosco",
    icon: "mdi:whatsapp"
  }
];

const title = "Inox Link | Contato e Links";
const description = "Conecte-se com o Inox Link. Notícias, Wiki e muito mais sobre o mundo do aço inoxidável.";
---

<!doctype html>
<html lang="pt-br">
	<head>
		<GoogleTag />
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
		<SEO 
			title={title}
			description={description}
			canonicalUrl="https://inoxlink.com.br/contato"
		/>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Outfit:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
	</head>
	<body class="bg-black text-white font-['Outfit',sans-serif] selection:bg-white selection:text-black">
		<div class="fixed inset-0 -z-10 bg-[radial-gradient(circle_at_50%_50%,#1a1a1a_0%,#000000_100%)]"></div>

		<main class="max-w-xl mx-auto px-6 py-16 flex flex-col items-center">
			<!-- Header -->
			<div class="text-center mb-12 animate-in fade-in slide-in-from-bottom-4 duration-700">
				<div class="w-24 h-24 bg-white p-4 rounded-3xl mb-6 mx-auto shadow-[0_0_50px_rgba(255,255,255,0.1)]">
					<img src="/favicon_inox_link.svg" alt="Inox Link Logo" class="w-full h-full object-contain" />
				</div>
				<h1 class="text-3xl font-black tracking-tighter uppercase italic mb-2">Inox Link <span class="sr-only"> - Contato e Links</span></h1>
				<p class="text-zinc-400 font-medium tracking-tight">Especialistas em Aço Inoxidável</p>
			</div>

			<!-- Links Grid -->
			<div class="w-full space-y-4 mb-20 animate-in fade-in slide-in-from-bottom-6 duration-1000 fill-mode-both">
				{links.map((link) => (
					<a 
						href={link.url} 
						target="_blank" 
						rel="noopener noreferrer"
						class="group relative flex items-center p-4 bg-zinc-900/50 backdrop-blur-xl border border-white/5 rounded-2xl transition-all duration-300 hover:bg-white hover:border-white hover:-translate-y-1 hover:shadow-[0_10px_40px_rgba(255,255,255,0.1)]"
					>
						<div class="flex-1">
							<h2 class="text-lg font-bold tracking-tight group-hover:text-black transition-colors">{link.title}</h2>
							<p class="text-sm text-zinc-500 group-hover:text-black/60 transition-colors uppercase font-bold tracking-widest text-[10px] mt-0.5">
								{link.description}
							</p>
						</div>
						<div class="text-zinc-600 group-hover:text-black transition-colors">
							<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round">
								<path d="M7 17l10-10M7 7h10v10"/>
							</svg>
						</div>
					</a>
				))}
			</div>

			<!-- Newsletter Integration -->
			<div class="w-full animate-in fade-in slide-in-from-bottom-8 duration-1000 fill-mode-both">
                <div class="text-center mb-8">
                    <h3 class="text-xl font-black tracking-tighter uppercase italic">Newsletter</h3>
                    <p class="text-sm text-zinc-400 font-medium">Receba novidades direto no e-mail</p>
                </div>
				<Newsletter />
			</div>

			<!-- Footer -->
			<footer class="mt-20 py-8 text-center border-t border-white/5 w-full">
				<p class="text-[10px] text-zinc-500 font-bold uppercase tracking-[0.2em]">
					© {new Date().getFullYear()} INOX LINK • TODOS OS DIREITOS RESERVADOS
				</p>
                <a href="/" class="inline-block mt-4 text-[10px] text-white font-black uppercase tracking-widest hover:underline underline-offset-4">
                    Voltar para o site
                </a>
			</footer>
		</main>
	</body>
</html>

<style is:global>
	@keyframes in {
		from { opacity: 0; transform: translateY(20px); }
		to { opacity: 1; transform: translateY(0); }
	}
	.animate-in {
		animation-fill-mode: both;
	}
    /* Estilos para customizar o componente de newsletter na página de contato */
    #newsletter-form input {
        background: rgba(255, 255, 255, 0.05) !important;
        border-color: rgba(255, 255, 255, 0.1) !important;
    }
    #newsletter-form button {
        background: white !important;
        color: black !important;
    }
</style>

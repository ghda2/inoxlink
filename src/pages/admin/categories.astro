---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { db } from '../../db';
import { categories } from '../../db/schema';
import { actions } from 'astro:actions';

const allCategories = await db.select().from(categories);

if (Astro.request.method === 'POST') {
  const data = await Astro.request.formData();
  const name = data.get('name') as string;
  const slug = name.toLowerCase().replace(/ /g, '-').normalize('NFD').replace(/[\u0300-\u036f]/g, '');
  
  await Astro.callAction(actions.createCategory, { name, slug });
  return Astro.redirect('/admin/categories');
}
---

<AdminLayout title="Categorias">
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- List -->
    <div class="lg:col-span-2">
      <div class="bg-white border border-zinc-100 rounded-2xl overflow-hidden shadow-sm shadow-zinc-200/50">
        <table class="w-full text-left">
          <thead>
            <tr class="border-b border-zinc-100 bg-zinc-50/50">
              <th class="px-8 py-5 font-bold text-zinc-400 text-[10px] uppercase tracking-widest leading-none">Nome</th>
              <th class="px-8 py-5 font-bold text-zinc-400 text-[10px] uppercase tracking-widest leading-none text-right">Ações</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-zinc-50">
            {allCategories.map((cat) => (
              <tr class="hover:bg-zinc-50/30 transition-colors">
                <td class="px-8 py-5">
                  <span class="font-bold text-zinc-900 tracking-tight">{cat.name}</span>
                  <span class="text-[10px] text-zinc-400 block font-medium mt-0.5 italic">{cat.slug}</span>
                </td>
                <td class="px-8 py-5 text-right">
                    <button class="text-[11px] font-bold text-red-300 hover:text-red-500 transition-colors" onclick={`if(confirm('Excluir?')) window.location.href='/admin/categories/delete/${cat.id}'`}>Excluir</button>
                </td>
              </tr>
            ))}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Add Form -->
    <aside>
      <div class="bg-white border border-zinc-100 rounded-2xl p-8 sticky top-32 shadow-sm shadow-zinc-200/50">
        <h3 class="text-sm font-bold text-zinc-900 tracking-tight mb-6">Cadastrar Nova</h3>
        <form method="POST" class="space-y-5">
          <div class="space-y-1.5">
            <label class="text-[10px] font-bold text-zinc-400 uppercase tracking-widest">Nome da Categoria</label>
            <input type="text" name="name" required class="w-full bg-zinc-50 border border-zinc-100 rounded-xl px-4 py-3 text-zinc-900 focus:border-zinc-300 outline-none transition-all font-medium text-sm" placeholder="Ex: Manutenção" />
          </div>
          <button type="submit" class="w-full bg-black text-white font-bold text-xs tracking-tight py-3.5 rounded-xl shadow-lg shadow-zinc-200 hover:bg-zinc-800 transition-all active:scale-[0.98]">
            Criar Categoria
          </button>
        </form>
      </div>
    </aside>
  </div>
</AdminLayout>

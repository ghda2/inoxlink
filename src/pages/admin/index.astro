---
import AdminLayout from '../../layouts/AdminLayout.astro';
import { db } from '../../db';
import { news } from '../../db/schema';
import { count, eq } from 'drizzle-orm';

const newsCount = await db.select({ value: count() }).from(news);
const publishedCount = await db.select({ value: count() }).from(news).where(eq(news.published, true));
const draftsCount = (newsCount[0]?.value || 0) - (publishedCount[0]?.value || 0);
---

<AdminLayout title="Resumo">
  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-12">
    <div class="bg-white border border-zinc-100 p-8 rounded-2xl relative overflow-hidden group hover:border-zinc-200 transition-all shadow-sm shadow-zinc-200/50">
        <div class="relative z-10">
            <span class="text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-3 block">Total de Matérias</span>
            <div class="text-5xl font-bold tracking-tight text-zinc-900">{newsCount[0]?.value || 0}</div>
        </div>
        <div class="absolute top-6 right-6 text-zinc-50 opacity-0 group-hover:opacity-100 transition-opacity">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-200"><path d="M4 22h16a2 2 0 0 0 2-2V4a2 2 0 0 0-2-2H8a2 2 0 0 0-2 2v16a2 2 0 0 1-2 2Zm0 0a2 2 0 0 1-2-2v-9c0-1.1.9-2 2-2h2"/><path d="M18 14h-8"/><path d="M15 18h-5"/><path d="M10 6h8v4h-8V6Z"/></svg>
        </div>
    </div>

    <div class="bg-white border border-zinc-100 p-8 rounded-2xl relative overflow-hidden group hover:border-zinc-200 transition-all shadow-sm shadow-zinc-200/50">
        <div class="relative z-10">
            <span class="text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-3 block">Publicadas</span>
            <div class="text-5xl font-bold tracking-tight text-zinc-900">{publishedCount[0]?.value || 0}</div>
        </div>
        <div class="absolute top-6 right-6 text-zinc-50 opacity-0 group-hover:opacity-100 transition-opacity">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-200"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
        </div>
    </div>

    <div class="bg-white border border-zinc-100 p-8 rounded-2xl relative overflow-hidden group hover:border-zinc-200 transition-all shadow-sm shadow-zinc-200/50">
        <div class="relative z-10">
            <span class="text-[10px] font-bold text-zinc-400 uppercase tracking-widest mb-3 block">Rascunhos</span>
            <div class="text-5xl font-bold tracking-tight text-zinc-900">{draftsCount}</div>
        </div>
        <div class="absolute top-6 right-6 text-zinc-50 opacity-0 group-hover:opacity-100 transition-opacity">
            <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-zinc-200"><path d="M12 20h9"/><path d="M16.5 3.5a2.121 2.121 0 0 1 3 3L7 19l-4 1 1-4L16.5 3.5z"/></svg>
        </div>
    </div>
  </div>

  <div class="flex flex-col lg:flex-row gap-6">
    <div class="flex-1 bg-white border border-zinc-100 border-dashed rounded-[2rem] p-16 flex flex-col items-center justify-center text-center">
        <h2 class="text-2xl font-bold tracking-tight text-zinc-900 mb-2">Novo Conteúdo</h2>
        <p class="text-zinc-400 text-sm mb-8 max-w-sm">Comece a redigir uma nova matéria para o portal ou documentação para a Wiki.</p>
        <div class="flex gap-4">
            <a href="/admin/news/new" class="bg-black text-white px-8 py-3.5 rounded-xl font-bold text-sm tracking-tight hover:bg-zinc-800 transition-all shadow-lg active:scale-[0.98]">
                Nova Matéria
            </a>
            <a href="/admin/wiki/new" class="bg-zinc-100 text-zinc-600 px-8 py-3.5 rounded-xl font-bold text-sm tracking-tight hover:bg-zinc-200 transition-all active:scale-[0.98]">
                Novo Wiki
            </a>
        </div>
    </div>
  </div>
</AdminLayout>
